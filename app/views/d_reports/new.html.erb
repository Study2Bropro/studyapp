<div class="container">
  <div class="row">
    <div class="col-md-12 col-md-8 col-lg-6 px-6 px-sm-0 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h4>ディリーレポート投稿画面</h4>
        </div>
            <%= form_with model:@d_report do |f| %>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>タイトル</strong><%= f.text_field :title  %></li>
                <li class="list-group-item"><strong>投稿内容</strong><%= f.text_field :content %></li>
                <li class="list-group-item"><strong>日付</strong><%= f.date_field :date %></li>
                <li class="list-group-item mb-3"><%= f.submit '投稿',class:"btn btn-primary"%></li>
              </ul>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>