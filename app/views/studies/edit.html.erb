<h2>勉強予定編集</h2>
<%= form_with model: @study do |f| %>

  <%= render 'layouts/error_messages', model: f.object %>
  
  <label>タイトル</label>
  <%= f.text_field :title %>

  <label>勉強内容</label>
  <%= f.text_field :content %>

  <label>日程</label>
  <%= f.date_field :date %>

  <label>勉強開始時間</label>
  <%= f.time_field :start_time %>

  <label>勉強終了時間</label>
  <%= f.time_field :end_time %>

  <%= f.submit '変更' ,class: "btn btn-success"%>
  
<% end %>